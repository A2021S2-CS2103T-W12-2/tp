<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
        <stylesheets>
            <URL value="@HelpTheme.css" />
        </stylesheets>
         <ScrollPane>
            <content>
               <Pane>
                  <children>
                     <AnchorPane layoutY="14.0" prefHeight="640.0" prefWidth="720.0">
                        <children>
                           <ImageView fitHeight="705.0" fitWidth="680.0" layoutX="10.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="images/help1.png" />
                              </image>
                           </ImageView>
                           <ImageView fitHeight="639.0" fitWidth="680.0" layoutX="10.0" layoutY="650.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="images/help2.png" />
                              </image>
                           </ImageView>
                            <Label fx:id="helpMessage" layoutX="10.0" layoutY="1125.0" text="Label">
                            </Label>
                            <Button fx:id="copyButton" layoutX="10.0" layoutY="1145.0" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                            </Button>
                        </children>
                     </AnchorPane>
                  </children>
               </Pane>
            </content>
         </ScrollPane>
    </Scene>
  </scene>
</fx:root>
